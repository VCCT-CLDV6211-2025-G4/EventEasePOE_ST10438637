@model EventEasePOE.Models.VenueM

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div>
    <h4>@Model.VenueName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImageUrl" alt="Venue Image" width="200" /></dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
