@model EventEasePOE.Models.VenueM

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.VenueName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImageUrl" width="200" /></dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
