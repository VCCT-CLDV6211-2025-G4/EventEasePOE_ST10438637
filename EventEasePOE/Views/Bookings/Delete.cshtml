@model EventEasePOE.Models.BookingsM
@{
    ViewData["Title"] = "Delete Booking";
}
<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <strong>Venue:</strong> @Model.Venue?.VenueName <br />
    <strong>Event:</strong> @Model.Event?.EventName <br />
    <strong>Booking Date:</strong> @Model.BookingDate.ToShortDateString()
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Cancel</a>
</form>
